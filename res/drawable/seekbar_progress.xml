<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background"
        android:drawable="@drawable/seekbar_progress_bg_png"
        android:dither="true"
       >
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <gradient
                    android:startColor="#7F7F7F"
                    android:centerColor="#7F7F7F"
                    android:centerY="0.75"
                    android:endColor="#7F7F7F"
                    android:angle="270"
                />
            </shape>
        </clip>
    </item>
    <item
        android:id="@android:id/progress"
    >
        <clip>
            <shape>
                <gradient
                    android:startColor="#404040"
                    android:centerColor="#404040"
                    android:centerY="0.75"
                    android:endColor="#494949"
                    android:angle="270"
                />
            </shape>
        </clip>
    </item>    
</layer-list>
